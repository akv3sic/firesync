        <a href="/" class="link d-flex align-center">
            <img src="/favicon-48x48.png" alt="FireSync Logo" class="logo-icon" />
            <MudText Typo="Typo.h6">FireSync</MudText>
        </a>
    </MudElement>
    <MudNavLink Icon="@Icons.Material.Filled.Dashboard" Href="" Match="NavLinkMatch.All">Pregled</MudNavLink>
    <MudNavGroup Title="Osoblje" Icon="@Icons.Material.Filled.Groups" Expanded="false">
        <MudNavLink Href="/firefighters">Vatrogasci</MudNavLink>
        <MudNavLink Href="/other-staff">Ostalo osoblje</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Intervencije" Icon="@Icons.Material.Filled.Emergency" Expanded="false">
        <MudNavLink Href="/interventions">Pregled intervencija</MudNavLink>
        <MudNavLink Href="/intervention-types">Tipovi intervencija</MudNavLink>
    </MudNavGroup>
    <MudNavLink Icon="@Icons.Material.Filled.FireTruck" Href="/fleet">Vozni park</MudNavLink>
    <MudNavLink Icon="@Icons.Material.Filled.ManageAccounts" Href="/users">Korisnici</MudNavLink>
    <MudNavLink Icon="@Icons.Material.Filled.Settings" Href="/settings">Postavke</MudNavLink>
